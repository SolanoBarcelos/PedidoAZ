@model PedidoAZ.Models.PedidoModel

@{
    ViewData["Title"] = "Create";
}
<div class="text-center">
<h1>Novo Pedido</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produto" class="control-label">Produto</label>
                <input asp-for="Produto" class="form-control" />
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeCliente" class="control-label">Nome do Cliente</label>
                <input asp-for="NomeCliente" class="form-control" />
                <span asp-validation-for="NomeCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPedido" class="control-label"> Data do Pedido</label>
                <input asp-for="DataPedido" class="form-control" />
                <span asp-validation-for="DataPedido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recebido" class="control-label">Recebido</label>

                <div>
                    <br/>
                    <label>
                        <input type="radio" asp-for="Recebido" value="true" /> Sim
                    </label>
                    <label>
                        <input type="radio" asp-for="Recebido" value="false" /> Não
                    </label>
                </div>

            <span asp-validation-for="Recebido" class="text-danger"></span>
            </div>
@*            <div class="form-group">
                <label asp-for="Recebido" class="control-label">Recebido</label>
                <input asp-for="Recebido" class="form-control" />
                <span asp-validation-for="Recebido" class="text-danger"></span>
            </div>*@

            <br />
            <br />

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-action="Index">Ir para pedidos</a>
</div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
