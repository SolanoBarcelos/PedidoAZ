@model IEnumerable<PedidoAZ.Models.PedidoModel>

@{
    ViewData["Title"] = "Index";
}
<div class="text-center">
    <h1>Pedidos</h1>

    <p>
        <a asp-action="Create">Cadastrar Pedido</a>
    </p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        <span>Produto</span>
                        <!-- @Html.DisplayNameFor(model => model.Produto) -->
                    </th>
                    <th>
                        <span>Nome do Cliente</span>
                        <!-- @Html.DisplayNameFor(model => model.NomeCliente) -->
                    </th>
                    <th>
                        <span>Endereço</span>
                        <!-- @Html.DisplayNameFor(model => model.Endereco) -->
                    </th>
                    <th>
                        <span>Data do Pedido</span>
                        <!-- @Html.DisplayNameFor(model => model.DataPedido) -->
                    </th>
                    <th>
                        <span>Recebido</span>
                        <!-- @Html.DisplayNameFor(model => model.Recebido) -->
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCliente)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Endereco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataPedido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Recebido)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Visualizar</a> |
                        <a asp-action="Edit" asp-route-id="@item.Id">Receber</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>
    </div>
</div>

